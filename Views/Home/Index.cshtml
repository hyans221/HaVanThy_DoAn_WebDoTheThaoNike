
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<body>
    <!-- ------------------------- BANNER ------------------------- -->
    <section id="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="banner-title title-ani">Welcome to Nike Store</h1>
                    <p>
                        Shop the latest collection of Nike shoes. We offer a variety of sizes and colors to suit your
                        style.
                    </p>
                    <a href="#" class="btn btn-primary">Shop Now</a>
                </div>
                <div class="col-lg-6">
                    <div class="banner-image">
                        <img src="/DOAN_WEBSITE_NIKE_LTW/Nike_Pics/assets/nike1/1.png" alt="Nike Shoes">
                    </div>
                </div>
            </div>
        </div>
    </section>




    <!-- ------------------------- PRODUCTS ------------------------- -->
    <section id="products">
        <div class="container">
            <h2>Featured Products</h2>
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <img src="~/images/imgShoes/nike1.png" class="card-img-top"
                             alt="Product 1">
                        <div class="card-body">
                            <h5 class="card-title">Nike Air Max 1</h5>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <p class="price">$99.99</p>
                            <a href="#" class="btn btn-primary center-button">Add to Cart</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <img src="~/images/imgShoes/nike1.png" class="card-img-top"
                             alt="Product 2">
                        <div class="card-body">
                            <h5 class="card-title">Nike Air Jordan</h5>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <p class="price">$129.99</p>
                            <a href="#" class="btn btn-primary center-button">Add to Cart</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</body>

