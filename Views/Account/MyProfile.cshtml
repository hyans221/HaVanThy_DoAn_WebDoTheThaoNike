@model HaVanThy_DoAn_WebDoTheThaoNike.ViewModel.ProfileVM

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div>
                    <label class="labels">Username</label>
                    <input type="text" class="form-control" value="@Model.Username" readonly>
                </div>
                <div>
                    <label class="labels">Email</label>
                    <input type="text" class="form-control" value="@Model.Email" readonly>
                </div>
                <div>
                    <label class="labels">Mobile</label>
                    <input type="text" class="form-control" value="@Model.Mobile">
                </div>
                <div>
                    <label class="labels">Date of Birth</label>
                    <input type="text" class="form-control" value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd-MM-yyyy") : string.Empty)">
                </div>
                <div>
                    <label class="labels">Address</label>
                    <input type="text" class="form-control" value="@Model.Address">
                </div>
                <div>
                    <label class="labels">City</label>
                    <input type="text" class="form-control" value="@Model.City">
                </div>
                <!-- Thêm bất kỳ trường nào khác từ ProfileVM nếu cần -->
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="button">Save Profile</button>
                </div>
            </div>
        </div>
    </div>
</div>
