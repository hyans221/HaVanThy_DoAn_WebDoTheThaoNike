@model HaVanThy_DoAn_WebDoTheThaoNike.Models.Category

@{
    ViewBag.Title = "Create Category";
}

<main class="mt-4">
    <div class="container-fluid px-4">
        <div class="card">
            <div class="card-body row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    @using (Html.BeginForm("Create", "CategoriesAdmin", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        <fieldset>
                            <h2 class="mb-4">ADD NEW CATEGORY</h2>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- Category Name -->
                            <div class="col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.CategoryName, new { @class = "form-label" })
                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Category Name" } })
                                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                            </div>
                        </fieldset>

                        @Html.ValidationSummary()

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary">Create</button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>
    </div>
</main>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>

